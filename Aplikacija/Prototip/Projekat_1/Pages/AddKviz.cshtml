@page
@model Projekat_1.AddKvizModel

@{
    ViewData["Title"] = "AddKviz";
}

<h1>AddKviz</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Kviz.NazivKviza" class="control-label"></label>
                <input asp-for="Kviz.NazivKviza" class="form-control" />
                <span asp-validation-for="Kviz.NazivKviza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Kvizovi">Vrati se na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model KonacniProjekat.ZnamenitostSlikaModel
@{
ViewData["Title"]="Izmena znamenitosti";
}

<div class="text-center">
    <h1 class="display-4">@Model.TrenutnaZnamenitost.NazivZnamenitosti</h1>
</div>

<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item"><a class="page-link" asp-page="./ZnamenitostSve">Prikazi listu znamenitosti</a></li>
  </ul>
</nav>

@if(SessionClass.TipKorisnika=="A")
{
<form method="post">
    <div class="prijava">
        <div id="formContent">
         <label class="form-control">Dodajte sliku:</label> <input type="file" asp-for="NovaSlika.Slika"  placeholder="Slika" required />
         <button type="submit">Dodaj Sliku</button>
        </div>
    </div>
</form>
}
 else{
    <div class="alert alert-danger" role="alert" style="text-align: center;">Nemate pristup ovoj stranici</div> 
}
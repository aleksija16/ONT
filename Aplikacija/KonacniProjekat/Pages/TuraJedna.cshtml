@*MOZDA NOVO-PODACI O TURI*@
<form method="get">

  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Podaci o turi</h6>
    </div>
    <div class="card-body">
      
      <div class="naziv-rezAnk">Naziv</div>
      <div class="vrednost-rezAnk">@Model.Ture.NazivTure</div>
                  
      <div class="naziv-rezAnk">Dan održavanja</div>
      <div class="vrednost-rezAnk">@Model.Ture.DanOdrzavanja</div>

      <div class="naziv-rezAnk">Vreme održavanja</div>
      <div class="vrednost-rezAnk">@Model.Ture.VremeOdrzavanja</div>

      <div class="naziv-rezAnk">Mesto polaska</div>
      <div class="vrednost-rezAnk">@Model.Ture.MestoPolaska</div>

      <div class="naziv-rezAnk">Opis</div>
      <div class="vrednost-rezAnk">@Model.Ture.Opis</div>

      <div class="naziv-rezAnk">Vodic</div>
      <div class="vrednost-rezAnk">
        <a asp-page="./VodicJedan" asp-route-id="@Model.VodicTure.IdVodica"> @Model.VodicTure.ImeVodica @Model.VodicTure.PrezimeVodica</a>
      </div>
    </div>
  </div>                  
  </form>

@*MOZDA NOVO-REZULTATI ANKETE*@
  <form method="get">

  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Rezultati ankete</h6>
    </div>
    <div class="card-body">
      
      <div class="naziv-rezAnk">Organizovanost ture</div>
      <div class="vrednost-rezAnk">@Model.RezultatiAnkete.OrganizovanostTure</div>
                  
      <div class="naziv-rezAnk">Fizicka zahtevnost</div>
      <div class="vrednost-rezAnk">@Model.RezultatiAnkete.FizickaZahtevnostTure</div>

      <div class="naziv-rezAnk">Najinteresantnija znamenitost</div>
      <div class="vrednost-rezAnk">@Model.RezultatiAnkete.NajinteresantnijaZnamenitost</div>

      <div class="naziv-rezAnk">Najdosadnija znamenitost</div>
      <div class="vrednost-rezAnk">@Model.RezultatiAnkete.NajdosadnijaZnamenitost</div>

      <div class="naziv-rezAnk">Srednja ocena ture</div>
      <div class="vrednost-rezAnk">@Model.RezultatiAnkete.KonacnaOcena</div>
    </div>
  </div>                  
  </form>


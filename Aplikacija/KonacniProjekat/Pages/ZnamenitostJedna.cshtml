@page
@model KonacniProjekat.ZnamenitostJednaModel
@{
ViewData["Title"] = "Znamenitosti";
}

<div class=text-center>
    <h1 class="display-4">@Model.TrenutnaZnamenitost.NazivZnamenitosti</h1>
</div>

<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item"><a  class="page-link" asp-page="./ZnamenitostSve"><i class='fas fa-arrow-circle-left'></i>Prikaži listu znamenitosti</a></li>
     @if(SessionClass.TipKorisnika=="A"){
    <li class="page-item"><a class="page-link" asp-page="./ZnamenitostIzmeni" asp-route-id="@Model.TrenutnaZnamenitost.IdZnamenitosti">Izmeni znamenitost <i class="fas fa-edit"></i></a></li>
    <li class="page-item"><a class="page-link" asp-page="./ZnamenitostObrisi" asp-route-id="@Model.TrenutnaZnamenitost.IdZnamenitosti">Obriši znamenitost <i class="fas fa-trash-alt"></i></a></li>
     <li class="page-item"><a class="page-link" asp-page="./ZnamenitostSlika" asp-route-id="@Model.TrenutnaZnamenitost.IdZnamenitosti">Dodaj sliku <i class="fas fa-images"></i></a></li>
     }</ul>
</nav>

<div class="card shadow mb-4 ">

  <div class="ZnamenitostGlavniDiv">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Podaci o znamenitosti</h6>
      </div>
      <div class="card-body">

    <form method="get">
      <div class="naziv">Naziv:</div>
      <div class="vrednost">@Model.TrenutnaZnamenitost.NazivZnamenitosti</div>

      @{
        <div class="naziv">Lokacija:</div>
        if(Model.TrenutnaZnamenitost.Lokacija==null){
          <div class="vrednost">Nema podataka.</div>
        }
        else
        {
          <div class="vrednost">@Model.TrenutnaZnamenitost.Lokacija</div>
        }

        <div class="naziv">Opis:</div>
        if(Model.TrenutnaZnamenitost.Opis==null){
          <div class="vrednost">Nema podataka.</div>
        }
        else
        {
          <div class="vrednost">@Model.TrenutnaZnamenitost.Opis</div>
        }

        <div class="naziv">Radno vreme:</div>
        if(Model.TrenutnaZnamenitost.RadnoVreme==null){
          <div class="vrednost">Nema podataka.</div>
        }
        else
        {
          <div class="vrednost">@Model.TrenutnaZnamenitost.RadnoVreme</div>
        }

        <div class="naziv">Broj telefona:</div> 
        if(Model.TrenutnaZnamenitost.BrojTelefona==null){
          <div class="vrednost">Nema podataka.</div>
        }
        else
        {
          <div class="vrednost">@Model.TrenutnaZnamenitost.BrojTelefona</div>
        }

        <div class="naziv">Cena ulaznice:</div>
        if(Model.TrenutnaZnamenitost.CenaUlaznice==null){
          <div class="vrednost">Nema podataka.</div>
        }
        else
        {
          <div class="vrednost">@Model.TrenutnaZnamenitost.CenaUlaznice</div>
        }

        <div class="naziv">Tip:</div>
        if(Model.TrenutnaZnamenitost.Tip==null){
          <div class="vrednost">Nema podataka.</div>
        }
        else
        {
          <div class="vrednost">@Model.TrenutnaZnamenitost.Tip</div>
        }
      }
    </form>
  </div>
  <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Slike znamenitosti</h6>
      </div>
      <div class="card-body">
        
        <div  style="width: 100%; overflow-x: auto; white-space: nowrap; ">
    @foreach (var slika in Model.Slike)
    {
         <img class="img-fluid rounded mb-5 mb-md-0" src="images/znamenitosti/@slika.Slika" alt="" style="height:400px;">
    }
    </div>
    
      </div>
    </div>  
  </div> 
  
  </div>
    </div>  
  </div> 
</div>
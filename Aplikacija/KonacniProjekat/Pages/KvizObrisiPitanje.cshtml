@page
@model KonacniProjekat.KvizObrisiPitanjeModel
@{
    ViewData["Title"]="Brisanje pitanja";
}

@if(SessionClass.TipKorisnika == "A")
{
    <form method="post">
        <input type="hidden" asp-for="@Model.PitanjeId" />
        <label class="form-control select-fit-text" >
            <div class="div-obrisi-pitanje"> <h5>Da li ste sigurni da želite da obrišete sledeće pitanje:</h5>
                <label class="form-control select-fit-text">
                    @Model.PitanjeZaBrisanje.TekstPitanja
                </label>
                    <h5>iz kviza </h5>
                <label  class="form-control select-fit-text">
                    @Model.PitanjeZaBrisanje.IdKvizaNavigation.NazivKviza
                </label>    
                <h5>?</h5> 
            </div> 
        </label>
            <button type="submit" class="btn btn-danger">Obriši pitanje</button>    
            <a asp-page="./KvizJedan" asp-route-id="@Model.PitanjeZaBrisanje.IdKviza">Vrati se na prikaz kviza</a>
    </form>
}
else
{
  <div class="alert alert-danger" role="alert" style="text-align: center;"><i class="fas fa-exclamation-triangle"></i> Nemate pristup ovoj stranici, samo admin može da obriše pitanje. <i class="fas fa-exclamation-triangle"></i></div>      
}
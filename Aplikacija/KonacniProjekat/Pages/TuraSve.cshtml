@page
@model KonacniProjekat.TuraSveModel
@{
ViewData["Title"]="Ture";
}

<div class="text-center">
    <h1 class="display-4">Ture</h1>
</div>
@if(SessionClass.TipKorisnika=="A")
{
<nav aria-label="Page navigation">  
    <ul class="pagination justify-content-end">
        <li class="page-item"><a class="page-link" asp-page="./TuraDodaj">Dodaj turu</a></li>
    </ul>
</nav>
}
@if(SessionClass.TipKorisnika=="T")
{
<nav aria-label="Page navigation">  
    <ul class="pagination justify-content-end">
        <li class="page-item"><a class="page-link" asp-page="./TuraDodaj">Kreirajte svoju custom turu</a></li>
    </ul>
</nav>
}
<div class="row">
@foreach (var  tura in Model.SveTure) 
{<div class="column">
    <div class="flip-card-ture">
        <div class="inner-ture">
            <div class="front-ture">
                 <h1> @tura.NazivTure  </h1> 
            </div>
            <div class="back-ture">
                <div><a asp-page="./TuraJedna" asp-route-id="@tura.IdTure">Prikazi detalje</a></div>
                @if(SessionClass.TipKorisnika=="T")
                {
                <div><a asp-page="./TuraRezervisi" asp-route-id="@tura.IdTure">Rezervisi turu</a></div>
                <div><a asp-page="./TuraOceni" asp-route-id="@tura.IdTure">Oceni turu</a></div>
                }
              @if(SessionClass.TipKorisnika=="A")
              {
                <div><a asp-page="./TuraIzmeni" asp-route-id="@tura.IdTure">Izmeni turu</a></div>
				<div><a asp-page="./TuraObrisi"  asp-route-id="@tura.IdTure">Obrisi turu</a></div>
              }
            </div>
        </div>
    </div>
 </div>
}
</div>


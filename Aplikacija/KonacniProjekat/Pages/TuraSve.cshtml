@page
@model KonacniProjekat.TuraSveModel
@{
ViewData["Title"]="Ture";
}

<div class="text-center">
    <h1 class="display-4">Ture</h1>
</div>

<div class="text-right">
    <h3><a asp-page="./TuraDodaj">Dodaj turu</a></h3>
</div>

<div>
    <table class="table table-bordered">
        <thead>
            <th>ID ture</th>
            <th>Naziv ture</th>
            <th></th>
        </thead>
        <tbody>
            <form method="post">
                @foreach (var tura in Model.SveTure)
                {
                    <tr>
                        <td>@tura.IdTure</td>
                        <td>@tura.NazivTure</td>
						 <td><button type="submit" asp-route-id="@Model.SessionId" asp-route-tura="@tura.IdTure" asp-page-handler="Rezervisi">Rezervisi turu</button></td>
                    </tr>
                }
            </form>
        </tbody>
    </table>
</div>
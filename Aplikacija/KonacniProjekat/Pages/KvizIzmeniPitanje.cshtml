@page
@model KonacniProjekat.KvizIzmeniPitanjeModel
@{
    ViewData["Title"]="Izmena pitanja";
}

<div class="text-center">
    <h1 class="display-4">Izmena pitanja u kvizu: @Model.OvoPitanje.IdKvizaNavigation.NazivKviza</h1>
</div>

<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item"><a class="page-link" asp-page="./KvizJedan" asp-route-id="@Model.KvizId">Vrati se na prikaz kviza</a></li>
  </ul>
</nav>
@if(SessionClass.TipKorisnika == "A")
{
    <form method=post>
        <div class="izmeni">
            <div id="formContent">
                <input type="hidden" asp-for="KvizId" />
                <input type="hidden" asp-for="PitanjeId" />
                <label class="form-control select-fit-text">Unesite novo pitanje:</label> <textarea class="form-control"asp-for="OvoPitanje.TekstPitanja" value="@Model.OvoPitanje.TekstPitanja" ></textarea>
                <label class="form-control">Odgovor A:</label> <textarea class="form-control" asp-for="OvoPitanje.OdgovorA" value="@Model.OvoPitanje.OdgovorA"></textarea>
                <label class="form-control">Odgovor B:</label> <textarea class="form-control" asp-for="OvoPitanje.OdgovorB" value="@Model.OvoPitanje.OdgovorB"></textarea>
                <label class="form-control">Odgovor C:</label> <textarea class="form-control" asp-for="OvoPitanje.OdgovorC" value="@Model.OvoPitanje.OdgovorC"></textarea>
                <label class="form-control select-fit-text">Tačan odgovor je pod:</label>   <select class="form-control select-fit-text" asp-for="IzborTacnogOdgovoraInt" required>
                                                                                                    <option value="" selected disabled hidden>Izaberite koji odgovor je tačan.</option>
                                                                                                    <option value="1">A</option>
                                                                                                    <option value="2">B</option>
                                                                                                    <option value="3">C</option>

                                                                                                </select>
                <button type="submit" class="dugme">Izmeni pitanje</button>
            </div>
      </div>
    </form>
}
else
{
  <div class="alert alert-danger" role="alert" style="text-align: center;"><i class="fas fa-exclamation-triangle"></i> Nemate pristup ovoj stranici, samo admin može da izmeni pitanje. <i class="fas fa-exclamation-triangle"></i></div>   
}